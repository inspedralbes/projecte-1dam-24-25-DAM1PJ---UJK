<%- include('../partials/header', { title: 'Editar Departament' }) %>

<div class="d-flex justify-content-center my-5">
  <div class="col-lg-8 col-md-10">
    <div class="card shadow-sm">
      <div class="card-header bg-dark text-white">Editar Departament</div>
      <div class="card-body">
        <form action="/departament/<%= departament.id_departament %>/edit" method="POST">
          <div class="mb-3">
            <label for="nom" class="form-label">Nom del Departament</label>
            <input 
              type="text" 
              name="nom" 
              id="nom" 
              class="form-control" 
              value="<%= departament.nom %>" 
              required>
          </div>

          <div class="d-grid">
            <button type="submit" class="btn btn-success">
              <i class="bi bi-pencil-square me-2"></i>Actualitzar Departament
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
