      <option value="recent">MÃ©s Recents</option>
      <option value="antic">MÃ©s Antics</option>
    </select>
  </div>

  <!-- Llistat d'incidÃ¨ncies -->
  <div id="incidentList">
    <% incidencies.forEach(incidencia => { %>
      <div class="card mb-3 shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
          <strong>ID: <%= String(incidencia.id_incidencia).slice(0, 7) %>...</strong>
          <span class="badge bg-primary text-uppercase"><%= incidencia.prioritat %></span>
