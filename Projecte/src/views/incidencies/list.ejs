  <!-- Buscador i filtres -->
  <div class="d-flex flex-column flex-md-row mb-4 gap-2">
    <input type="text" id="searchInput" class="form-control" placeholder="Buscar per tÃ­tol, ID, descripciÃ³...">
    
    <select class="form-select w-auto" id="filterEstado">
