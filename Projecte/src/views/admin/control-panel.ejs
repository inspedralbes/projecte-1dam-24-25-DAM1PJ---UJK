<%- include('../partials/header', { title: 'Panell de Control - Administrador' }) %>

<div class="container py-5">
  <h1 class="mb-4 text-center">Panell de Control de l'Administrador</h1>
  <p class="lead text-center mb-5">Des d'aquest espai pots gestionar tots els aspectes del sistema: incidències, actuacions, tècnics, tipus i departaments.</p>

  <div class="row g-4">

    <!-- Incidències -->
    <div class="col-md-6 col-lg-4">
      <div class="card shadow-sm h-100">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0"><i class="bi bi-exclamation-circle-fill me-2"></i>Incidències</h5>
        </div>
        <div class="card-body d-flex flex-column">
          <a href="/incidencies/new" class="btn btn-primary mb-2 w-100">
            <i class="bi bi-plus-circle me-2"></i>Crear Incidència
          </a>
          <a href="/incidencies" class="btn btn-outline-primary mb-2 w-100">
            <i class="bi bi-list-ul me-2"></i>Llistat d'Incidències
          </a>
          <a href="/admin/gestionar-incidencies" class="btn btn-outline-primary w-100">
            <i class="bi bi-pencil-square me-2"></i>Assignar / Editar
          </a>
        </div>
      </div>
    </div>

    <!-- Actuacions -->
    <div class="col-md-6 col-lg-4">
      <div class="card shadow-sm h-100">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0"><i class="bi bi-tools me-2"></i>Actuacions</h5>
        </div>
        <div class="card-body d-flex flex-column">
          <a href="/actuacions/create" class="btn btn-primary mb-2 w-100">
            <i class="bi bi-plus-circle me-2"></i>Crear Actuació
          </a>
          <a href="/actuacions" class="btn btn-outline-primary w-100">
            <i class="bi bi-list-ul me-2"></i>Llistat d'Actuacions
          </a>
        </div>
      </div>
    </div>

    <!-- Tècnics -->
    <div class="col-md-6 col-lg-4">
      <div class="card shadow-sm h-100">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0"><i class="bi bi-person-badge-fill me-2"></i>Tècnics</h5>
        </div>
        <div class="card-body d-flex flex-column">
          <a href="/admin/tecnics/new" class="btn btn-primary mb-2 w-100">
            <i class="bi bi-person-plus me-2"></i>Crear Tècnic
          </a>
          <a href="/admin/tecnics" class="btn btn-outline-primary w-100">
            <i class="bi bi-people me-2"></i>Gestió de Tècnics
          </a>
        </div>
      </div>
    </div>

    <!-- Tipus d'Incidència -->
    <div class="col-md-6 col-lg-4">
      <div class="card shadow-sm h-100">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0"><i class="bi bi-tags-fill me-2"></i>Tipus d'Incidència</h5>
        </div>
        <div class="card-body d-flex flex-column">
          <a href="/admin/tipus/new" class="btn btn-primary mb-2 w-100">
            <i class="bi bi-tags me-2"></i>Crear Tipus
          </a>
          <a href="/admin/tipus" class="btn btn-outline-primary w-100">
            <i class="bi bi-list-check me-2"></i>Gestió de Tipus
          </a>
        </div>
      </div>
    </div>

    <!-- Departaments -->
    <div class="col-md-6 col-lg-4">
      <div class="card shadow-sm h-100">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0"><i class="bi bi-building me-2"></i>Departaments</h5>
        </div>
        <div class="card-body d-flex flex-column">
          <a href="/admin/departaments/new" class="btn btn-primary mb-2 w-100">
            <i class="bi bi-building-add me-2"></i>Crear Departament
          </a>
          <a href="/admin/departaments" class="btn btn-outline-primary w-100">
            <i class="bi bi-buildings me-2"></i>Gestió de Departaments
          </a>
        </div>
      </div>
    </div>

    <!-- Altres Accions -->
    <div class="col-md-6 col-lg-4">
      <div class="card shadow-sm h-100">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0"><i class="bi bi-gear-fill me-2"></i>Altres Accions</h5>
        </div>
        <div class="card-body d-flex flex-column">
          <a href="/admin/logs" class="btn btn-outline-primary mb-2 w-100">
            <i class="bi bi-clipboard-data me-2"></i>Veure Logs
          </a>
          <a href="/admin/logs/stats" class="btn btn-outline-primary w-100">
            <i class="bi bi-bar-chart-line me-2"></i>Estadístiques
          </a>
        </div>
      </div>
    </div>

  </div>

  <div class="alert alert-info mt-5 text-center" role="alert">
    Si tens cap dubte, contacta amb l’equip tècnic.
  </div>
</div>

<%- include('../partials/footer') %>
